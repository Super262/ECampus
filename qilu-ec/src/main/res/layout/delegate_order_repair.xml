<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.Toolbar
        android:background="@color/colorECampus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新建报修"
            android:textSize="20sp"
            android:textColor="#FFFF"
            android:gravity="center"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:text="故障类型"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:textSize="18sp"/>
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/order_type_text"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:maxLength="10"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:hint="不超过10个字，简要描述故障……"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:gravity="center_vertical"
                        android:textSize="15sp"/>
                </android.support.v7.widget.LinearLayoutCompat>
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="60dp"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:text="故障所在地"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:textSize="18sp"/>
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/order_location_text"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:maxLength="20"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:hint="不超过20个字，简要描述位置……"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:gravity="center_vertical"
                        android:textSize="15sp"/>
                </android.support.v7.widget.LinearLayoutCompat>
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="115dp"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:text="故障描述"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:textSize="18sp"/>
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/order_detail_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:maxLength="100"
                        android:hint="说明故障的具体情况，不超过100字……"
                        />
                </android.support.v7.widget.LinearLayoutCompat>
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="300dp"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:text="提交者"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:textSize="18sp"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/this_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:gravity="center_vertical"
                        android:textSize="15sp"/>
                </android.support.v7.widget.LinearLayoutCompat>
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="355dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:text="联系电话"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:textSize="18sp"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/this_phone_text"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:gravity="center_vertical"
                        android:textSize="15sp"/>
                </android.support.v7.widget.LinearLayoutCompat>
            </RelativeLayout>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="照片*"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <com.qilu.qilu_ui.widget.AutoPhotoLayout
                    android:id="@+id/custom_auto_photo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:icon_size="8sp"
                    app:item_margin="3"
                    app:line_count="5"
                    app:max_count="5" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="录音*"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_add_voice_order"
                    android:layout_width="wrap_content"
                    android:padding="2dp"
                    android:layout_height="25dp"
                    android:background="@color/colorECampus"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:text="添加录音"
                    android:textColor="@android:color/white"
                    tools:ignore="HardcodedText" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="带有*标注的为可选项"
                android:textSize="12sp"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="提交后，不可修改或撤回！"
                android:textSize="12sp"/>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_submit_order"
                android:layout_width="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_height="40dp"
                android:background="@color/colorECampus"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:text="提交"
                android:textColor="@android:color/white"
                tools:ignore="HardcodedText" />
        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>
</android.support.v7.widget.LinearLayoutCompat>

