<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="5dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/index_order_type_text"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:text="投影机故障"
            android:textColor="@android:color/black"
            android:maxLength="10"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_height="40dp" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/index_order_location_text"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="软件园5区108"
            android:textColor="@android:color/black"
            android:maxLength="20"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:layout_height="40dp" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/index_order_content_text"
            android:layout_width="match_parent"
            android:layout_marginTop="95dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:text="投影机故障"
            android:maxLength="100"
            android:textSize="15sp"
            android:layout_height="match_parent" />
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/index_order_state_icon_finish"
            android:layout_margin="5dp"
            android:text="{fa-check-circle}"
            android:textColor="@color/state_finish"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/index_order_state_icon_need_assess"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:text="{fa-question-circle}"
            android:textColor="@color/state_need_assess"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/index_order_state_icon_need_accept"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:text="{fa-question-circle}"
            android:textColor="@color/state_need_accept"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/index_order_state_text"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="15sp"
            android:text="已受理，未评价"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="30dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>